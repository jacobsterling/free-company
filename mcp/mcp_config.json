{
    "server": {
        "host": "127.0.0.1",
        "port": 55557,
        "max_connections": 5,
        "buffer_size": 4096,
        "timeout": 5.0
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "unreal_mcp.log",
        "max_size": 10485760,
        "backup_count": 5
    },
    "commands": {
        "max_retries": 3,
        "retry_delay": 1.0,
        "socket_timeout": 5.0
    },
    "paths": {
        "pid_file": "unreal_mcp.pid",
        "log_dir": "logs",
        "temp_dir": "temp"
    }
}